{
  "manifest_version": 2,

  "name": "pwned",
  "description": "checks if current website has any previous breaches",
  "version": "1.0",
  "background": {"scripts": ["bg.js"] },
  "options_ui": {
 	"page": "options.html",
	"chrome_style": true
  },
  "browser_action": {
 	 "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	"storage"
  ]
}
